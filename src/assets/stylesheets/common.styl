@import "variables"

html
	font-size 62.5%
	font-family "lato"
	height 100%
	min-height 100%
body
	width 100%
	height 100%
	-webkit-transition background-position 2s ease
	   -moz-transition background-position 2s ease
	    -ms-transition background-position 2s ease
	     -o-transition background-position 2s ease
	        transition background-position 2s ease
	background-attachment fixed
	background-image url('../media/images/min/base.jpg') no-repeat
	background-position: center center
	-webkit-background-size cover
	     -o-background-size cover
	        background-size cover
	min-height 100%
	standard-size()
	margin 0
	padding 0
a
	color #48739E
	text-decoration none
	&:visited
		color #48739E
	&:hover
		color #C00
.background
	-webkit-transition opacity 1s ease
	   -moz-transition opacity 1s ease
	    -ms-transition opacity 1s ease
	     -o-transition opacity 1s ease
	        transition opacity 1s ease
	opacity 1
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-image linear-gradient(rgba(255, 255, 255, 0.8) .1em, rgba(255, 255, 255, 0.4))
	background-size 100% 2px
	&.is-scrolled
		opacity 0
.small
	font-size 0.9em
a.button
.button
	cursor pointer
	text-decoration none
	-webkit-transition opacity 3s ease
	   -moz-transition opacity 3s ease
	    -ms-transition opacity 3s ease
	     -o-transition opacity 3s ease
	        transition opacity 3s ease
	font-family "lato"
	font-size 1.5rem
	box-shadow 1px 1px 2px rgba(255, 255, 255, 0.6), -1px 1px 2px rgba(255, 255, 255, 0.6), 1px -1px 2px rgba(255, 255, 255, 0.6), -1px -1px 2px rgba(255, 255, 255, 0.6)
	padding 0.75em 2em
	border-radius 2em
	display inline-block
	color rgba(255, 255, 255, 1)
	background-color rgba(102, 159, 100, 1)
	background-image -webkit-linear-gradient(top,  rgba(117,185,93,1) 0%,rgba(64,134,63,1) 33%,rgba(111,164,96,1) 66%,rgba(62,134,61,1) 100%);
	background-image    -moz-linear-gradient(top,  rgba(117,185,93,1) 0%, rgba(64,134,63,1) 33%, rgba(111,164,96,1) 66%, rgba(62,134,61,1) 100%);
	background-image         linear-gradient(to bottom,  rgba(117,185,93,1) 0%,rgba(64,134,63,1) 33%,rgba(111,164,96,1) 66%,rgba(62,134,61,1) 100%);
	box-sizing border-box
	border 1px solid #4fc08d
	&:hover
		color rgba(102, 159, 100, 1)
		background-color #fff
		background-image none
.aside
	margin 0

blockquote
	padding 6px 24px 6px 30px
	margin 1em 0
	border-left 4px solid #6dbd4d
	background-color #f8f8f8
	position relative
	border-bottom-right-radius 4px
	border-top-right-radius 4px

.gitter-chat-embed
	border-left 1px solid #3e863d

.gitter-open-chat-button
	opacity 0
	-webkit-transition opacity 1s ease
	-moz-transition opacity 1s ease
	-ms-transition opacity 1s ease
	-o-transition opacity 1s ease
	-webkit-transition-delay 5s
	-moz-transition-delay 5s
	-ms-transition-delay 5s
	-o-transition-delay 5s
	transition-delay 5s
	text-transform none
	background-color #3e863d;
	right: 0;
	border-top-right-radius 0
	padding: 0.95em 3em;
	@media (max-width 499px)
		padding .5em
	&:hover
		color #3e863d;
		background-color #fff
	&.is-displayed
		opacity 1