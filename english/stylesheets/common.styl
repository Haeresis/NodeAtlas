@import "variables"

html
	font-size 62.5% 
	font-family "lato"
body
	standard-size()
	margin 0
	padding 0
	background-attachment fixed
	background-image url('https://www.lesieur.name/media/images/animate-website.jpg')
	backgroun-position: center center
	-webkit-background-size cover 
	     -o-background-size cover 
	        background-size cover
.background
	-webkit-transition opacity 1s ease 
	   -moz-transition opacity 1s ease 
	    -ms-transition opacity 1s ease 
	     -o-transition opacity 1s ease 
	        transition opacity 1s ease 
	opacity 1
	position absolute
	top 0
	left 0
	width 100%
	height 100% 
	background-image linear-gradient(rgba(255, 255, 255, 0.8) .1em, rgba(255, 255, 255, 0.4))
	background-size 100% 2px
	&.is-scrolled
		opacity 0
.small
	font-size 0.9em 