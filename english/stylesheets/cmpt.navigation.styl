@import "variables"

.navigation
	height 100px
	overflow hidden
	-webkit-transition background-color 2s linear 
	   -moz-transition background-color 2s linear 
	    -ms-transition background-color 2s linear 
	     -o-transition background-color 2s linear 
	        transition background-color 2s linear
	position relative
	&.is-scrolled
	&.with-animation
		-webkit-transition height 1s ease 
		   -moz-transition height 1s ease 
		    -ms-transition height 1s ease 
		     -o-transition height 1s ease 
		        transition height 1s ease
	&--inner
		position absolute
		top 0
		left 0
		width 100%
		height 0
		-webkit-transition opacity 1s ease 
		   -moz-transition opacity 1s ease 
		    -ms-transition opacity 1s ease 
		     -o-transition opacity 1s ease 
		        transition opacity 1s ease
		opacity 0
		background-color rgba(255, 255, 255, .5)
		^[-1].is-scrolled &
			opacity 1
			height 100%
	&--outer
		z-index 2
		position absolute
		opacity 1
		top 0
		left 0
		width 100%
		height 100%
		overflow hidden
		-webkit-transition height 1s ease, opacity 1s ease
		   -moz-transition height 1s ease, opacity 1s ease
		    -ms-transition height 1s ease, opacity 1s ease
		     -o-transition height 1s ease, opacity 1s ease
		        transition height 1s ease, opacity 1s ease
		^[-1].is-scrolled &
			height 0
			opacity 0
		button
			opacity 0 
			-webkit-transition color .5s ease, background-color .5s ease, opacity 3s ease
			   -moz-transition color .5s ease, background-color .5s ease, opacity 3s ease
			    -ms-transition color .5s ease, background-color .5s ease, opacity 3s ease
			     -o-transition color .5s ease, background-color .5s ease, opacity 3s ease
			        transition color .5s ease, background-color .5s ease, opacity 3s ease
			font-family "lato"
			font-size 1.5rem
			font-weight bold
			box-shadow 1px 1px 2px rgba(255, 255, 255, 0.6), -1px 1px 2px rgba(255, 255, 255, 0.6), 1px -1px 2px rgba(255, 255, 255, 0.6), -1px -1px 2px rgba(255, 255, 255, 0.6)
			letter-spacing 0.1em
			padding 0.75em 2em
			border-radius 2em
			display inline-block
			color rgba(255, 255, 255, 1)
			background-color rgba(102, 159, 100, 1)
			box-sizing border-box
			border 1px solid #4fc08d
			&:hover
				color rgba(102, 159, 100, 1)
				background-color rgba(255, 255, 255, 1)
			&.is-loaded
				opacity 1
	&--start
	&--documentation
		position absolute
		left 50%
		-webkit-transition top 1s ease, left 1s ease 
		   -moz-transition top 1s ease, left 1s ease 
		    -ms-transition top 1s ease, left 1s ease 
		     -o-transition top 1s ease, left 1s ease 
		        transition top 1s ease, left 1s ease 
		-webkit-transform translate(-50%, -50%) 
		   -moz-transform translate(-50%, -50%) 
		    -ms-transform translate(-50%, -50%) 
		     -o-transform translate(-50%, -50%) 
		        transform translate(-50%, -50%)
		button
			cursor pointer
	&--start
		top 45% 
		@media (min-width 540px)
			top 50%
			left calc(50% - 130px)
	&--documentation
		top 75%
		@media (min-width 540px)
			top 50%
			left calc(50% + 130px)
	&--home
	&--lang
	&--menu
		position absolute
	&--home
		left 10px
		top 50%
		-webkit-transform translateY(-50%) 
		   -moz-transform translateY(-50%) 
		    -ms-transform translateY(-50%) 
		     -o-transform translateY(-50%) 
		        transform translateY(-50%) 
	&--lang
		top 10px
		right 10px
	&--menu
		background-color #FFF 
		right 0
		bottom 0
		padding 10px
		-webkit-border-top-left-radius 8px 
		        border-top-left-radius 8px 
		ul
			margin 0
			padding 0
			font-size 0
			ul
				display none
		li
			standard-size()
			list-style-type none
			display inline-block
			margin-left 20px
			margin-right 20px