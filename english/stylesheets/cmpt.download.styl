@import "variables"

.download
	height 0
	overflow hidden
	position relative
	&.is-scrolled
		height 150px
		& ^[0]--inner
			opacity 1 
	&.with-animation
		-webkit-transition height 1s ease 
		   -moz-transition height 1s ease 
		    -ms-transition height 1s ease 
		     -o-transition height 1s ease 
		        transition height 1s ease
	&.is-small
		& ^[0]--version--step1
			.aside
				display none
		& ^[0]--version--step2
		& ^[0]--cli--step2
		& ^[0]--cli--step3
		& ^[0]--api--step2
		& ^[0]--api--step3
			display none
		& ^[0]--install
		& ^[0]--clone
			height 100%
		& ^[0]--info
		& ^[0]--plugin
			height 0
	&--inner
		-webkit-transition opacity 1s ease 
		   -moz-transition opacity 1s ease 
		    -ms-transition opacity 1s ease 
		     -o-transition opacity 1s ease 
		        transition opacity 1s ease	
		opacity 0 
		-webkit-box-sizing border-box
		   -moz-box-sizing border-box
		        box-sizing border-box
		position absolute
		max-height 520px 
		top 50%
		left 50%
		-webkit-transform translate(-50%, -50%) 
		   -moz-transform translate(-50%, -50%) 
		    -ms-transform translate(-50%, -50%) 
		     -o-transform translate(-50%, -50%) 
		        transform translate(-50%, -50%)
		width 100%
		height calc(100% - 40px)
		@media (min-width 360px)
			width calc(100% - 40px)
		max-width 1024px
	&--install
	&--clone
	&--plugin
	&--info
		-webkit-transition height 1s ease 
		   -moz-transition height 1s ease 
		    -ms-transition height 1s ease 
		     -o-transition height 1s ease 
		        transition height 1s ease 
		overflow hidden
		position absolute
		background-color rgb(255, 255, 255)
		background -webkit-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(255,255,255,0.6) 63%,rgba(255,255,255,0.3) 100%)
		background    -moz-linear-gradient(top, rgba(255,255,255,1) 0%, rgba(255,255,255,0.6) 63%, rgba(255,255,255,0.3) 100%)
		background         linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(255,255,255,0.6) 63%,rgba(255,255,255,0.3) 100%)
		-webkit-border-radius 8px 
		        border-radius 8px
		h2
			margin-top 0
			padding 0 10px 
			font-size 1.8rem
			height 24px
		h3
			text-shadow 1px 1px 2px rgba(255, 255, 255, 1), -1px 1px 2px rgba(255, 255, 255, 1), 1px -1px 2px rgba(255, 255, 255, 1), -1px -1px 2px rgba(255, 255, 255, 1)
			font-size 1.6rem
			color: #555
			font-weight bold
			margin 12px 0 4px 0
	&--install
	&--info
		height calc(50% - 10px)
		width 100%
		@media (min-width 640px)
			display block
			width calc(70% - 10px)
	&--clone
	&--plugin
		height calc(50% - 10px)
		width calc(30% - 10px)
		display none
		@media (min-width 640px)
			display block
	&--install
		top 0
		left 0
		background-color transparent
		background-image none
	&--clone
		top 0
		right 0
		background-color transparent
		background-image none
		&--last
			margin 4px
		.aside
			font-weight bold
		p
			span
		input
			-webkit-border-top-left-radius 3px
			        border-top-left-radius 3px
			-webkit-border-bottom-left-radius 3px
			        border-bottom-left-radius 3px
			-webkit-box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.075)
			        box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.075)
			-webkit-box-sizing border-box
			   -moz-box-sizing border-box
			        box-sizing border-box
			vertical-align middle
			width calc(100% - 72px)
			min-height 28px
			color #333
			font-family monospace
			border 1px solid #ddd
			padding 3px 8px
		    font-size 1.2rem
		    line-height 2.0rem
		button
			font-size 0
			vertical-align middle
			margin 0
			padding 0
			border 0
			background-color transparent
		.fa
			&:hover
				color #000 
			&::before
				position absolute
				top 50%
				left 50%
				-webkit-transform translate(-50%, -50%) 
				   -moz-transform translate(-50%, -50%) 
				    -ms-transform translate(-50%, -50%) 
				     -o-transform translate(-50%, -50%) 
				        transform translate(-50%, -50%)
			cursor pointer
			position relative
			width 32px
			-webkit-box-sizing border-box
			   -moz-box-sizing border-box
			        box-sizing border-box
			min-height 28px
			color: #555;
			-webkit-border-top-right-radius 3px
			        border-bottom-right-radius 3px
			background-image -webkit-linear-gradient(#eee, #ddd)
			background-image         linear-gradient(#eee, #ddd)
			font-size 1.6rem
			background-color #ddd
			border 1px solid #ccc
			border-left 0
	&--version
		top 24px
		-webkit-border-top-right-radius 8px
		        border-top-right-radius 8px
		background-color rgb(255, 255, 255)
		background -webkit-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(255,255,255,0.6) 63%,rgba(255,255,255,0.3) 100%)
		background    -moz-linear-gradient(top,  rgba(255,255,255,1) 0%, rgba(255,255,255,0.6) 63%, rgba(255,255,255,0.3) 100%)
		background         linear-gradient(to bottom,  rgba(255,255,255,1) 0%,rgba(255,255,255,0.6) 63%,rgba(255,255,255,0.3) 100%)	
		position absolute
		height calc(100% - 24px)
		width 100%
		h2
			-webkit-border-top-left-radius 8px
			        border-top-left-radius 8px
			-webkit-border-top-right-radius 8px
			        border-top-right-radius 8px 
			white-space nowrap
			margin 0
			display inline-block
			position absolute
			bottom calc(100% - 1px)
			background-color rgb(255, 255, 255)
			left -1px
		&--inner
			width 100%
			text-align center
			position absolute
			top 50%
			left 50%
			-webkit-transform translate(-50%,-50%) 
			   -moz-transform translate(-50%,-50%) 
			    -ms-transform translate(-50%,-50%) 
			     -o-transform translate(-50%,-50%) 
			        transform translate(-50%,-50%) 
		&--step2
			@media (max-height 530px)
				display none
	&--plugin
		bottom 0
		left 0
	&--info
		bottom 0
		right 0
	&--install
	&--clone
		@media (max-height 739px)
			height 100%
	&--plugin
	&--info
		&--inner
			position absolute
			top 50%
			left 50%
			-webkit-transform translate(-50%, -50%) 
			   -moz-transform translate(-50%, -50%) 
			    -ms-transform translate(-50%, -50%) 
			     -o-transform translate(-50%, -50%) 
			        transform translate(-50%, -50%) 
		@media (max-height 739px)
			display none
	&--api
	&--cli
		border-top 1px solid #ccc
		-webkit-transition width 1s ease, z-index 1s ease 
		   -moz-transition width 1s ease, z-index 1s ease 
		    -ms-transition width 1s ease, z-index 1s ease  
		     -o-transition width 1s ease, z-index 1s ease  
		        transition width 1s ease, z-index 1s ease 
		top 24px 
		background-color rgb(255, 255, 255)
		background -webkit-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(255,255,255,0.6) 63%,rgba(255,255,255,0.3) 100%)
		background    -moz-linear-gradient(top,  rgba(255,255,255,1) 0%, rgba(255,255,255,0.6) 63%, rgba(255,255,255,0.3) 100%)
		background         linear-gradient(to bottom,  rgba(255,255,255,1) 0%,rgba(255,255,255,0.6) 63%,rgba(255,255,255,0.3) 100%)	
		position absolute
		height calc(100% - 24px)
		width 0%
		h2
			cursor pointer
			-webkit-border-top-left-radius 8px
			        border-top-left-radius 8px
			-webkit-border-top-right-radius 8px
			        border-top-right-radius 8px 
			white-space nowrap
			margin 0
			display inline-block
			position absolute
			bottom calc(100% - 1px)
			background-color rgb(255, 255, 255)
			left -1px
		pre
			-webkit-box-sizing border-box
			   -moz-box-sizing border-box
			        box-sizing border-box
			margin 0
			padding 1rem
			background: rgba(117, 185, 93, 0.7)
			color: #111
			border 1px solid #555
			-webkit-box-shadow inset 1px 1px 2px rgba(0, 0, 0, 0.4)
			        box-shadow inset 1px 1px 2px rgba(0, 0, 0, 0.4)
			font-weight bold
			display inline-block
			width 100%
		&.is-active
			width 100%
			z-index 3
	&--cli
		left 0
		z-index 2
		text-align center
		&--inner
			width 60%
			min-width 350px
			position absolute
			top 50%
			left 50%
			-webkit-transform translate(-50%, -50%) 
			   -moz-transform translate(-50%, -50%) 
			    -ms-transform translate(-50%, -50%) 
			     -o-transform translate(-50%, -50%) 
			        transform translate(-50%, -50%)
		&--step1
		&--step2
		&--step3
			-webkit-box-sizing border-box
			   -moz-box-sizing border-box
			        box-sizing border-box
			float left
		&--step1
			width calc(100%)
			pre
				padding 1.2rem
				font-size 2rem 
			h3
				text-shadow 1px 1px 2px rgba(255, 255, 255, 1), -1px 1px 2px rgba(255, 255, 255, 1), 1px -1px 2px rgba(255, 255, 255, 1), -1px -1px 2px rgba(255, 255, 255, 1)
			font-size 1.6rem
				margin 0 0 4px 0
		&--step2
			margin-left 10px
			width calc(50% - 20px)
			margin-right 10px
			position relative
			@media (max-height 530px)
				display none
		&--step3
			margin-left 10px
			width calc(50% - 20px)
			margin-right 10px
			@media (max-height 530px)
				display none
	&--api
		right 0
		z-index 1
		text-align center
		h2
			text-align right
			left auto 
			right -1px
		&--inner
			width calc(100% - 40px)
			min-width 350px
			position absolute
			top 50%
			left 50%
			-webkit-transform translate(-50%, -50%) 
			   -moz-transform translate(-50%, -50%) 
			    -ms-transform translate(-50%, -50%) 
			     -o-transform translate(-50%, -50%) 
			        transform translate(-50%, -50%)
		&--step1
			float right
			width calc(60% - 20px)
			margin-left calc(40% + 20px)
			h3
				margin 0 0 4px 0
		&--step2
			position absolute
			top 0
			left 0
			width 40%
			height 100%
			h3
				margin 0 0 4px 0
			pre
				overflow hidden
				text-align left
				color #f8f8f2
				font-weight lighter
				font-size 1.3rem
				padding 4px 
				background rgba(51, 51, 51, 0.7)
			span
				position absolute
				bottom -9px
				right 2px
				display inline-block
				border 1px solid rgba(51, 51, 51, 0.7)
				padding 2px
				font-style italic
			@media (max-height 530px)
				display none
		&--step3
			float right
			width calc(60% - 20px)
			margin-left calc(40% + 20px)
			@media (max-height 530px)
				display none